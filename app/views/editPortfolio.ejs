<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>editportfolio</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round|Open+Sans">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <style>
    body {
      color: #404E67;
      background: #F5F7FA;
      font-family: 'Open Sans', sans-serif;
    }

    .table-wrapper {
      width: 700px;
      margin: 30px auto;
      background: #fff;
      padding: 20px;
      box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
    }

    .table-title {
      padding-bottom: 10px;
      margin: 0 0 10px;
    }

    .table-title h2 {
      margin: 6px 0 0;
      font-size: 22px;
    }

    .table-title .add-new {
      float: right;
      height: 30px;
      font-weight: bold;
      font-size: 12px;
      text-shadow: none;
      min-width: 100px;
      border-radius: 50px;
      line-height: 13px;
    }

    .table-title .add-new i {
      margin-right: 4px;
    }

    table.table {
      table-layout: fixed;
    }

    table.table tr th,
    table.table tr td {
      border-color: #e9e9e9;
    }

    table.table th i {
      font-size: 13px;
      margin: 0 5px;
      cursor: pointer;
    }

    table.table th:last-child {
      width: 100px;
    }

    table.table td a {
      cursor: pointer;
      display: inline-block;
      margin: 0 5px;
      min-width: 24px;
    }

    table.table td a.add {
      color: #27C46B;
    }

    table.table td a.edit {
      color: #FFC107;
    }

    table.table td a.delete {
      color: #E34724;
    }

    table.table td i {
      font-size: 19px;
    }

    table.table td a.add i {
      font-size: 24px;
      margin-right: -1px;
      position: relative;
      top: 3px;
    }

    table.table .form-control {
      height: 32px;
      line-height: 32px;
      box-shadow: none;
      border-radius: 2px;
    }

    table.table .form-control.error {
      border-color: #f50000;
    }

    table.table td .add {
      display: none;
    }
  </style>
</head>

<body>
  <div class="container-lg">
    <div class="table-responsive">
      <div class="table-wrapper">
        <form action="/api/portfolio/update/<%= values._id %>" method="POST" enctype="multipart/form-data">
          <a href="/portfolio"><box-icon type='solid' name='left-arrow'></box-icon></a>
          <div class="modal-header">
            <h4 class="modal-title">Edit Portfolio</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label>Project Category</label>
              
              <select name="pcategory">
                <option selected="" disabled="">select Category</option>
                <% for(let i=0; i < cat.length; i++) { %>
                  <option value="<%= cat[i]._id %>">
                      <%= cat[i].categoryName %>
                  </option>
                  <%}%>
              <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
                <div style="color: red;">
                  <%= error1 %>
                </div>
                <% } %>
            </div>

            <div class="form-group">
              <label>Project Name</label>
              <input type="text" name="pname" class="form-control" value="<%= values.pname %>">
              <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                <div style="color: red;">
                  <%= error2 %>
                </div>
                <% } %>
            </div>
            <div class="form-group">
              <label>Project Image</label><br>
              <input class="form-control" type="file" id="formFileMultiple" name="uploadImage" multiple />
                        <input type="hidden" name="old_image" value="<%= values.uploadImage %>">
                        <% values.uploadImage.forEach(function(image) { %>
                            <img src="/<%= image %>" width="100" class="img-thumbnail mt-1">
                        <% }) %>
            </div>

            <div class="form-group">
              <label>Project Title</label><br>
              <input type="" name="ptitle" class="form-control" value="<%= values.ptitle %>">
              <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                <div style="color: red;">
                  <%= error3 %>
                </div>
                <% } %>
            </div>

            <div class="form-group">
              <label>Project URL</label><br>
              <input type="" name="url" class="form-control" value="<%= values.url %>">
              <% if (typeof error4 !=='undefined' && error4.length> 0) { %>
                <div style="color: red;">
                  <%= error4 %>
                </div>
                <% } %>
            </div>

            <div class="form-group">
              <label>Project Date</label><br>
              <input type="date" name="pdate" class="form-control" value="<%= values.pdate %>">
              <% if (typeof error5 !=='undefined' && error5.length> 0) { %>
                <div style="color: red;">
                  <%= error5 %>
                </div>
                <% } %>

            </div>

          </div>
          <div class="modal-footer">
            <input type="submit" class="btn btn-success" value="Edit">
          </div>
        </form>
      </div>
    </div>
  </div>
</body>

</html>